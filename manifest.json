{
	"manifest_version": 2,
	"name": "Revert GitHub Font",
	"description": "Restores the size and font used on GitHub before it was changed on 2016-07-12.",
	"version": "1.0",
	"minimum_chrome_version": "36",
	"icons": {"128": "icon.png"},
	
	"permissions": [
		"https://github.com/*",
		"https://gist.github.com/*"
	],
	
	"content_scripts": [{
		"run_at": "document_end",
		"css": ["content.css"],
		"matches": [
			"https://github.com/",
			"https://github.com/*/",
			"https://github.com/*/*",
			
			"https://gist.github.com/",
			"https://gist.github.com/*/",
			"https://gist.github.com/*/*"
		]
	}]
}
